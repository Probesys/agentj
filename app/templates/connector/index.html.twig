{% extends 'base.html.twig' %}

{% block title %}Connector index{% endblock %}

{% block body %}
    <h1>Connector index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for connector in connectors %}
            <tr>
                <td>{{ connector.id }}</td>
                <td>{{ connector.name }}</td>
                <td>{{ connector.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_connector_show', {'id': connector.id}) }}">show</a>
                    <a href="{{ path('app_connector_edit', {'id': connector.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_connector_new') }}">Create new</a>
{% endblock %}
