{% extends 'base.html.twig' %}

{% block title %}{{ 'Entities.Connector.show'|trans() }}{% endblock %}

{% block body %}
    <h1>{{ 'Entities.Connector.show'|trans() }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ connector.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Entitites.Connector.fields.name'|trans() }}</th>
                <td>{{ connector.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Entitites.Connector.fields.active'|trans() }}</th>
                <td>{{ connector.active ? 'Generics.labels.yes'|trans() : 'Generics.labels.no'|trans() }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_connector_index') }}">{{ 'Generics.actions.backToTheList'|trans() }}</a>

    <a href="{{ path('app_connector_edit', {'id': connector.id}) }}">{{ 'Generics.actions.edit'|trans() }}</a>

    {{ include('connector/_delete_form.html.twig') }}
{% endblock %}
