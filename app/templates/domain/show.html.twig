{% extends 'base.html.twig' %}

{% block title %}Domain{% endblock %}

{% block body %}
    <h1>Domain</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ domain.id }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ domain.domain }}</td>
            </tr>
            <tr>
                <th>SrvSmtp</th>
                <td>{{ domain.srvSmtp }}</td>
            </tr>
            <tr>
                <th>SrvImap</th>
                <td>{{ domain.srvImap }}</td>
            </tr>
            <tr>
                <th>Datemod</th>
                <td>{{ domain.datemod ? domain.datemod | format_datetime('short', 'short') : '' }}</td>
            </tr>
            <tr>
                <th>Imap_port</th>
                <td>{{ domain.imapPort }}</td>
            </tr>
            <tr>
                <th>Imap_flag</th>
                <td>{{ domain.imapFlag }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ domain.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Transport</th>
                <td>{{ domain.transport }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('domain_index') }}">back to list</a>

    <a href="{{ path('domain_edit', {'id': domain.id}) }}">edit</a>

    {{ include('domain/_delete_form.html.twig') }}
{% endblock %}
