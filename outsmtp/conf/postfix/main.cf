smtpd_banner = $myhostname AgentJ ESMTP (libre antispam system)
biff = no
append_dot_mydomain = no
readme_directory = no
compatibility_level = 2
smtp_host_lookup = dns, native

myhostname = agentj.example.com
mynetworks = 127.0.0.0/8 [::ffff:127.0.0.0]/104 [::1]/128 172.24.42.0/24
mydestination = 

smtpd_relay_restrictions =
        permit_mynetworks,
        reject_non_fqdn_recipient,
        reject_unknown_recipient_domain,
        reject_unauth_destination


alias_maps = hash:/etc/postfix/aliases
alias_database = hash:/etc/postfix/aliases

local_recipient_maps =
local_transport = error:local mail delivery is disabled 
smtpd_sender_restrictions = check_sender_access mysql:/etc/postfix/mysql-virtual_recipient_maps.cf, reject
relayhost =
soft_bounce = no

content_filter=amavisfeed:[outamavis]:10024
mailbox_size_limit = 0
recipient_delimiter = +
inet_interfaces = all


